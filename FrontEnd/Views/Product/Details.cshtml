@model FrontEnd.Models.ProductViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="breadcrumb-section breadcrumb-bg" style="height: 112px !important; padding: 0 !important;"></div>
<div class="container" style="margin-bottom: 30px; margin-top: 30px;">
    <h1>Details</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryId)
            </dt>
            <dd class="col-sm-10">
                @Model.CategoryName
            </dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Photo)</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@Model.Photo" alt="Product Image" style="width: 200px; height: auto;" />
                }
                else
                {
                    <p>No image available</p>
                }
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new {  id = Model.Id }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>